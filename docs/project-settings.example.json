{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "availableModels": [
    "sonnet",
    "opus",
    "haiku"
  ],
  "outputStyle": "aletheia-proof",
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(rg *)",
      "Bash(fd *)",
      "Bash(cargo check)",
      "Bash(cargo test *)",
      "Bash(pnpm test *)",
      "Bash(pytest *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Edit(./.env)",
      "Edit(./.env.*)"
    ]
  },
  "enabledPlugins": {
    "aletheia-nexus@local": true
  }
}
